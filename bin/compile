#!/usr/bin/env bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a hello.txt"

# if hello.txt is empty, abort the build
if [ ! -s $1/hello.txt ]; then
  echo "hello.txt was empty" | indent
  exit 1
fi

# replace hello with goodbye in a new file
# find . -type f -exec sed -i 's+/assets\///+g' {} +

cat Images

exit 0
