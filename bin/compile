#!/usr/bin/env bash

echo "-----> Found a hello.txt"

cd $3

DOWNLOADS="/assets/downloads/"
FONTS="/assets/fonts/"
GENERICONS="/assets/genericons/"
IMAGES="/assets/images/"
VIDEOS="/assets/videos/"

REMOTE_DOWNLOADS=$(cat Downloads)
REMOTE_FONTS=$(cat Fonts)
REMOTE_GENERICONS=$(cat Genericons)
REMOTE_IMAGES=$(cat Images)
REMOTE_VIDEOS=$(cat Videos)

find . -type f -exec sed -i "s/$DOWNLOADS/$REMOTE_DOWNLOADS/g" {} +
find . -type f -exec sed -i "s/$FONTS/$REMOTE_FONTS/g" {} +
find . -type f -exec sed -i "s/$GENERICONS/$REMOTE_GENERICONS/g" {} +
find . -type f -exec sed -i "s/$IMAGES/$REMOTE_IMAGES/g" {} +
find . -type f -exec sed -i "s/$VIDEOS/$REMOTE_VIDEOS/g" {} +

exit 0
